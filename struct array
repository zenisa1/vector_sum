#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <string.h>
struct std {
	int num;
	char name[20];
	double grade;
};

void s_array_input(struct std s[]) {
	int i = 0;
	for (i; i < 10; i++) {
		printf("학번, 이름, 학점 입력:");
		scanf("%d %s %lf", &s[i].num, s[i].name, &s[i].grade);
	}
}

void s_array_grade_average(struct std s[]) {
	int i = 0;
	double sum = 0.0;
	for (i; i < 10; i++) {
		sum += s[i].grade;
	}
	printf("학점 평균:%.2lf\n", sum / 10.0);
}

int main(void) {

	struct std s[10];
	s_array_input(s);
	
	s_array_grade_average(s);
	return 0;
}
